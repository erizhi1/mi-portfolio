# EditorConfig es usado por muchos editores y IDEs para definir 
# y mantener estilos de codificaci√≥n consistentes entre diferentes 
# editores y IDEs

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,vue,ts,json,css,scss,html}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
